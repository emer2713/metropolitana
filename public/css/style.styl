/*Media query*/
@media (max-width 768px)
    #Slider-H
        height 380px !important
    #Promotions-H
        height 350px !important
    .modal-header
        height 27px !important

    .modal-content
            position absolute
            height 85% !important
            .modal-body
                max-height 95%
    .modal-header .close
        padding 0 !important
        margin 0 !important
    #content-body-modal
        height 98% !important
    #more-sould-modal
        .poste
            p
                font-size calc(0.5rem + 0.1vw) !important
