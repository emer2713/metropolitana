    position fixed
    background-color #3D3C62
    top 0
    width 100%
    height 110px
    z-index 10
    padding  0 !important
    a
        color #fff
    .dropdown-menu
        a
            color red
    .clasifications-menu
        margin 0
        display inline-block
        min-width 25%
