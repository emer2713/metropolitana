#Beers
    .E-t
        text-align center
        padding-top 1px !important
        padding 0
        width 155px
        border-radius 0 15px 0 0
        height 30px !important
        .year
            color #fff
            margin 0 0 0 3px
            font-size 0.8rem
            display flex
            align-items center
        span
            overflow auto
            width 28px
            height 28px
            border-radius 50px
            display flex
            border 1.5px solid #fff
    .C-c
        margin-top 10px
        padding 10px 0 0 5px
        .poste
            border-radius 15px
            height 100%
            max-width 118px
            min-width 118px
            margin-right 5px
            padding-top 8px

            img
                background-repeat no-repeat
                background-size 78% auto
                background-position center
                background-position-x center
                background-position-y center
#more-sould-modal
